---
import "animate.css";
---

<footer class="relative mx-auto bg-[#252753] text-white py-16 px-4 overflow-hidden">
  <!-- Logo overlay - behind everything -->
  <div class="absolute inset-0 z-0 flex items-center justify-center">
    <img 
      src="https://xs17wgd2wu.ufs.sh/f/nX6SBdwGAudfkG4O2EuHSKkmIuyZ3LdYg6Oin5txV0eEfaMq" 
      alt="With the Ranks Logo" 
      class="max-w-[80%] md:max-w-[60%] lg:max-w-[50%] object-contain"
    />
  </div>

  <!-- Gradient overlay -->
  <div class="absolute inset-0 z-[1] opacity-30">
    <div class="w-full h-full bg-[radial-gradient(33.22%_84.51%_at_50.03%_100%,#2AFFCC_0%,#252753_100%)]"></div>
  </div>

  <div class="container mx-auto max-w-6xl relative z-[2]">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <!-- Connect Column -->
      <div>
        <h2 class="text-5xl font-bold mb-6">Connect</h2>
        <ul class="space-y-3">
          <li><a href="#" class="footer-link">Newsletter</a></li>
          <li><a href="#" class="footer-link">RSS</a></li>
          <li><a href="#" class="footer-link">Mastodon</a></li>
          <li><a href="#" class="footer-link">BlueSky</a></li>
        </ul>
      </div>

      <!-- Our Work Column -->
      <div>
        <h2 class="text-5xl font-bold mb-6">Our Work</h2>
        <ul class="space-y-3">
          <li><a href="#" class="footer-link">Case Studies</a></li>
          <li><a href="#" class="footer-link">Portfolio</a></li>
          <li><a href="#" class="footer-link">Testimonials</a></li>
          <li><a href="#" class="footer-link">Blog</a></li>
        </ul>
      </div>

      <!-- Support Column -->
      <div>
        <h2 class="text-5xl font-bold mb-6">Support</h2>
        <ul class="space-y-3">
          <li><a href="#" class="footer-link">Spoke</a></li>
          <li><a href="#" class="footer-link">Get in touch</a></li>
        </ul>
      </div>
    </div>

    <!-- Footer text -->
    <div class="mt-16 text-center">
      <p class="text-[#fffcf7] text-lg opacity-80">
        With the Ranks is 100% worker-owned, and we don't use cookies.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer-link {
    color: #fffcf7;
    font-size: 1.25rem;
    text-decoration: underline;
    text-underline-offset: 4px;
    transition: color 0.3s ease-in-out;
  }
  .footer-link:hover {
    color: #470cec;
  }
</style>
