---
export interface Feature {
  icon: string;
  title: string;
  description: string;
}

export interface SectionOneProps {
  sectionTitle: string;
  sectionSubtitle: string;
  features: Feature[];
}

const { sectionTitle, sectionSubtitle, features } = Astro.props;
---

<section id="features">
  <div class="mx-auto w-full lg:px-24 max-w-7xl md:px-12 items-center px-8 py-24 scroll-mt-12">
    <div class="mx-auto max-w-xl text-center">
      <div>
        <p class="text-4xl tracking-tight font-medium md:text-5xl font-display">
          {sectionTitle}
        </p>
        <p class="mt-4 text-lg text-gray-500 mx-auto tracking-tight">
          {sectionSubtitle}
        </p>
      </div>
    </div>
    <div class="mx-auto max-w-7xl pt-12">
      <h2 class="sr-only">Features</h2>
      <div class="grid gap-12 grid-cols-1 lg:space-y-0 lg:text-center md:grid-cols-3">
        {features.map((feature: { icon: string; title: string; description: string; }) => (
          <div>
            <div>
              <div class="items-center justify-center bg-gray-100 rounded-xl flex h-10 w-10 lg:mx-auto">
                <ion-icon aria-label={feature.icon + " outline"} class="hydrated md h-4 w-4" name={feature.icon} role="img"></ion-icon>
              </div>
              <p class="mt-4 text-lg font-semibold leading-6 font-display tracking-tight">
                {feature.title}
              </p>
            </div>
            <div class="mt-4 text-sm">
              {feature.description}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
